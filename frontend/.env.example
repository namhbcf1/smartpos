# SmartPOS Frontend - Environment Variables Example
# Production-ready configuration only - NO localhost URLs (violates rules.md)

# API Base URL - ALWAYS use production Cloudflare Workers
VITE_API_BASE_URL=https://namhbcf-api.workers.dev/api
VITE_API_URL=https://namhbcf-api.workers.dev

# App Environment - ALWAYS production-ready
VITE_APP_ENV=production

# App Configuration
VITE_APP_NAME=Smart POS
VITE_APP_VERSION=1.0.0

# Feature Flags - Production settings only
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PERFORMANCE_MONITOR=true
VITE_ENABLE_OFFLINE_MODE=false

# Security & Performance
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_SOURCEMAPS=false
