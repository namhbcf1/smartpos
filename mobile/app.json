{
  "expo": {
    "name": "Smart POS Mobile",
    "slug": "smartpos-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartpos.mobile",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan barcodes and take product photos",
        "NSLocationWhenInUseUsageDescription": "This app uses location to track store locations and deliveries"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.smartpos.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-camera",
      "expo-barcode-scanner",
      "expo-location",
      "expo-notifications",
      [
        "expo-updates",
        {
          "username": "smartpos"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "smart-pos-mobile-project"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/smart-pos-mobile-project"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}