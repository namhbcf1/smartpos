{
  "name": "smartpos",
  "version": "1.0.0",
  "description": "Smart POS system using Cloudflare services",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "echo \"Skipping TypeScript check for deployment - using wrangler for bundling\"",
    "typecheck": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "format": "prettier --write .",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/utils",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:full": "ts-node tests/run-all-tests.ts",
    "test:e2e:critical": "ts-node tests/run-all-tests.ts --critical",
    "test:production": "npm run test:e2e:full",
    "test:smoke": "npm run test:e2e:critical",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "hono": "^3.11.0",
    "jose": "^5.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230914.0",
    "@playwright/test": "^1.54.2",
    "@types/jest": "^29.5.4",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "wrangler": "^3.7.0"
  }
}
