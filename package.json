{
  "name": "truongphatpc-backend",
  "version": "1.0.0",
  "description": "Truong Phat PC Backend API - Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "build": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:create": "wrangler d1 create Smart POS Free",
    "db:migrate": "wrangler d1 migrations apply Smart POS Free",
    "db:migrate:local": "wrangler d1 migrations apply Smart POS Free --local",
    "db:seed": "wrangler d1 execute Smart POS Free --file=./database/seed.sql",
    "db:seed:local": "wrangler d1 execute Smart POS Free --file=./database/seed.sql --local",
    "kv:create": "wrangler kv:namespace create",
    "r2:create": "wrangler r2 bucket create smartpos-uploads",
    "pre-commit": "npm run type-check && npm run lint",
    "clean": "rm -rf dist .wrangler",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug"
  },
  "dependencies": {
    "@cloudflare/workerd-windows-64": "^1.20251001.0",
    "@hono/zod-validator": "^0.7.3",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.2",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "hono": "^3.12.12",
    "jose": "^5.1.3",
    "lucide-react": "^0.544.0",
    "react-hook-form": "^7.63.0",
    "react-router-dom": "^7.9.3",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@playwright/test": "^1.55.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.6.1",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.53.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.2.2",
    "wrangler": "^4.40.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "smartpos",
    "pos",
    "cloudflare",
    "workers",
    "d1",
    "kv",
    "r2",
    "typescript",
    "hono"
  ],
  "author": "SmartPOS Team",
  "license": "MIT"
}
